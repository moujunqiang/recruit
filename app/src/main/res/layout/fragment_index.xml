<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".index.IndexFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="677dp"
        android:background="#FFFFFF	">

        <ImageButton
            android:id="@+id/btn_application_record"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="48dp"
            android:background="#e0000000"
            android:scaleType="fitXY"
            android:src="@drawable/applicationrecord"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_invitation"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="48dp"
            android:background="#e0000000"
            android:scaleType="fitXY"
            android:src="@drawable/invivation"
            app:layout_constraintStart_toEndOf="@+id/btn_application_record"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_remind"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="48dp"
            android:background="#e0000000"
            android:scaleType="fitXY"
            android:src="@drawable/remind"
            app:layout_constraintStart_toEndOf="@+id/btn_invitation"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:text="申请记录"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_application_record" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="4dp"
            android:text="邀请信息"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/btn_invitation" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="4dp"
            android:text="温馨提醒"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/btn_remind" />

        <ImageButton
            android:id="@+id/btn_about_us"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="18dp"
            android:background="#e0000000"
            android:scaleType="fitXY"
            android:src="@drawable/about_us"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="18dp"
            android:text="关于我们"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_about_us" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>